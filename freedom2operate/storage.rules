rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /ndas/{userId}/{fileName} {
      // Allow read/write access if the user is authenticated and the path segment matches their user ID
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /submissions/{userId}/{fileName} {
      // Allow read/write access if the user is authenticated and the path segment matches their user ID
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /drafts/{userId}/{fileName} {
      // Allow read/write access if the user is authenticated and the path segment matches their user ID
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /video-call-docs/{fileName} {
      // Allow authenticated users to upload video call documents
      allow write: if request.auth != null;
      // Allow authenticated users to read their own documents
      allow read: if request.auth != null && 
        (request.auth.uid == resource.metadata.userId || 
         resource.metadata.isPublic == true);
    }
  }
}
